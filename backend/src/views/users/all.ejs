<!doctype html>
<html>
  <body>
    <h2>All users</h2>

    <div style="margin-bottom:10px;">
      <a href="/posts/feed">← Feed</a> |
      <a href="/users/recommendations">Reco</a> |
      <a href="/friends">Friends</a>
    </div>

    <hr />

    <% (users || []).forEach(u => { %>
      <div style="border:1px solid #ddd; padding:10px; margin:10px 0;">
        <strong><%= u.displayName %></strong> — <%= u.email %>

        <div style="margin-top:8px;">
          <form method="POST" action="/users/<%= u.id %>/follow" style="display:inline;">
            <button type="submit">Follow / Unfollow</button>
          </form>

          <form method="POST" action="/friends/request/<%= u.id %>" style="display:inline;">
            <button type="submit">Add friend</button>
          </form>
        </div>
      </div>
    <% }) %>
  </body>
</html>

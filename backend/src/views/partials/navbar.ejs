<script>
(function () {
  if (window.__tsnSseStarted) return;
  window.__tsnSseStarted = true;

  const notifBadge = document.getElementById("notifBadge");
  const messagesBadge = document.getElementById("messagesBadge");

  function setBadge(n) {
    const val = Number(n) || 0;
    if (notifBadge) {
      notifBadge.textContent = val;
      notifBadge.style.visibility = val > 0 ? "visible" : "hidden";
    }
  }

  function setMessagesBadge(n) {
    const val = Number(n) || 0;
    if (messagesBadge) {
      messagesBadge.textContent = val;
      messagesBadge.style.visibility = val > 0 ? "visible" : "hidden";
    }
  }

  function escapeHtml(str) {
    return String(str || "")
      .replaceAll("&", "&amp;")
      .replaceAll("<", "&lt;")
      .replaceAll(">", "&gt;")
      .replaceAll('"', "&quot;")
      .replaceAll("'", "&#039;");
  }

  function notifLabel(n) {
    const from = n.fromUser?.displayName ? `De ${n.fromUser.displayName}` : "";
    switch (n.type) {
      case "LIKE": return `‚ù§Ô∏è Nouveau like. ${from}`;
      case "COMMENT": return `üí¨ Nouveau commentaire. ${from}`;
      case "FRIEND_REQUEST": return `üë• Nouvelle demande d'ami. ${from}`;
      case "FRIEND_ACCEPTED": return `‚úÖ Demande d'ami accept√©e. ${from}`;
      case "FOLLOW": return `‚ûï Nouveau follower. ${from}`;
      case "GROUP_INVITE": return `üì® Invitation de groupe. ${from}`;
      case "GROUP_JOIN": return `üö™ Quelqu'un a rejoint ton groupe. ${from}`;
      case "EVENT_CREATED":
        return `üìÖ Nouvel event cr√©√©${n.event?.title ? ` : ${n.event.title}` : ""}. ${from}`;
      case "EVENT_RSVP":
        return `üóìÔ∏è RSVP sur ton event. ${from}`;
      default:
        return `üîî Nouvelle notification. ${from}`;
    }
  }

  function toast(message, onClick) {
    const container = document.getElementById("toastContainer");
    if (!container) return;

    const toastEl = document.createElement("div");
    toastEl.className = "toast";
    toastEl.setAttribute("role", "alert");
    toastEl.innerHTML = `
      <div class="toast-header bg-dark text-white">
        <strong class="me-auto">Notification</strong>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body" style="cursor:pointer;">
        ${escapeHtml(message)}
      </div>
    `;

    toastEl.querySelector(".toast-body").addEventListener("click", () => {
      try { onClick?.(); } catch (_) {}
    });

    container.appendChild(toastEl);
    const bsToast = new bootstrap.Toast(toastEl, { autohide: true, delay: 4500 });
    bsToast.show();

    toastEl.addEventListener("hidden.bs.toast", () => toastEl.remove());
  }

  if (notifBadge) setBadge(notifBadge.textContent);
  if (messagesBadge) setMessagesBadge(messagesBadge.textContent);

  const es = new EventSource("/events");

  es.addEventListener("ping", () => {});

  es.onmessage = (e) => {
    let data;
    try { data = JSON.parse(e.data); } catch (_) { return; }
    if (!data) return;

    if (data.type === "new_message") {
      const current = Number(messagesBadge?.textContent) || 0;
      setMessagesBadge(current + 1);

      const sender = data.message?.sender?.displayName || "Quelqu'un";
      const preview = data.message?.content?.substring(0, 50) || "";
      const msg = `üí¨ ${sender}: ${preview}${preview.length >= 50 ? "..." : ""}`;

      toast(msg, () => {
        window.location.href = `/messages/${data.conversationId}`;
      });
      return;
    }

    if (typeof data.unreadCount === "number") {
      setBadge(data.unreadCount);
    } else {
      const current = Number(notifBadge?.textContent) || 0;
      setBadge(current + 1);
    }

    const msg = notifLabel(data);
    const goTo = () => {
      if (data.event?.groupId) window.location.href = `/groups/${data.event.groupId}`;
      else window.location.href = "/notifications";
    };

    toast(msg, goTo);
  };

})();
</script>

<div style="margin-bottom:10px;">
  <a href="/posts/feed">Feed</a> |
  <a href="/users/all">Users</a> |
  <a href="/users/recommendations">Reco</a> |
  <a href="/interests">Int√©r√™ts</a> |
  <a href="/friends">Friends</a> |
  <a href="/groups">Groups</a> |
  <a href="/messages" id="messagesLink">
    Messages
    <% if ((unreadMessages || 0) > 0) { %>
      <span id="messagesBadge"
            style="display:inline-block; min-width:18px; padding:2px 6px; margin-left:4px; border-radius:999px; background:#667eea; color:#fff; font-size:12px; text-align:center;">
        <%= unreadMessages %>
      </span>
    <% } else { %>
      <span id="messagesBadge"
            style="display:inline-block; min-width:18px; padding:2px 6px; margin-left:4px; border-radius:999px; background:#667eea; color:#fff; font-size:12px; text-align:center; visibility:hidden;">
        0
      </span>
    <% } %>
  </a> |
  <a href="/notifications" id="notifLink">
    Notifications
    <span id="notifBadge"
          style="display:inline-block; min-width:18px; padding:2px 6px; margin-left:4px; border-radius:999px; background:#111; color:#fff; font-size:12px; text-align:center;">
      <%= unreadCount || 0 %>
    </span>
  </a>
  <% if (user && user.id) { %>
    | <a href="/profiles/<%= user.id %>">Mon profil</a>
  <% } %>
</div>
<!-- Toast container -->
<div id="toastContainer"
     style="position:fixed; right:8px; bottom:8px; z-index:9999; display:flex; flex-direction:column; gap:8px; max-width:calc(100vw - 16px); width:90vw; max-width:400px;">
</div>

<style>
  @media (max-width: 768px) {
    #toastContainer {
      right: 8px !important;
      bottom: 8px !important;
      width: 95vw !important;
      max-width: 100% !important;
    }
    
    #toastContainer .toast {
      max-width: 100%;
      min-width: auto;
    }
    
    #toastContainer .toast-body {
      font-size: 14px;
      padding: 12px;
    }
    
    #toastContainer .toast-header {
      font-size: 13px;
      padding: 8px 12px;
    }
  }
</style>

<script>
(function () {
  if (window.__tsnSseStarted) return;
  window.__tsnSseStarted = true;

  const notifBadge = document.getElementById("notifBadge");
  const messagesBadge = document.getElementById("messagesBadge");
  const toastContainer = document.getElementById("toastContainer");

  function setBadge(n) {
    const val = Number(n) || 0;
    if (notifBadge) {
      notifBadge.textContent = val;
      notifBadge.style.visibility = val > 0 ? "visible" : "hidden";
    }
  }

  function setMessagesBadge(n) {
    const val = Number(n) || 0;
    if (messagesBadge) {
      messagesBadge.textContent = val;
      messagesBadge.style.visibility = val > 0 ? "visible" : "hidden";
    }
  }

  function escapeHtml(str) {
    return String(str || "")
      .replaceAll("&", "&amp;")
      .replaceAll("<", "&lt;")
      .replaceAll(">", "&gt;")
      .replaceAll('"', "&quot;")
      .replaceAll("'", "&#039;");
  }

  function notifLabel(n) {
    const from = n.fromUser?.displayName ? `De ${n.fromUser.displayName}` : "";
    switch (n.type) {
      case "LIKE": return `‚ù§Ô∏è Nouveau like. ${from}`;
      case "COMMENT": return `üí¨ Nouveau commentaire. ${from}`;
      case "FRIEND_REQUEST": return `üë• Nouvelle demande d‚Äôami. ${from}`;
      case "FRIEND_ACCEPTED": return `‚úÖ Demande d‚Äôami accept√©e. ${from}`;
      case "FOLLOW": return `‚ûï Nouveau follower. ${from}`;
      case "GROUP_INVITE": return `üì® Invitation de groupe. ${from}`;
      case "GROUP_JOIN": return `üö™ Quelqu‚Äôun a rejoint ton groupe. ${from}`;
      case "EVENT_CREATED":
        return `üìÖ Nouvel event cr√©√©${n.event?.title ? ` : ${n.event.title}` : ""}. ${from}`;
      case "EVENT_RSVP":
        return `üóìÔ∏è RSVP sur ton event. ${from}`;
      default:
        return `üîî Nouvelle notification. ${from}`;
    }
  }

  function toast(message, onClick) {
    if (!toastContainer) return;

    const el = document.createElement("div");
    el.style.cssText =
      "min-width:260px; max-width:360px; background:#111; color:#fff; " +
      "padding:12px 14px; border-radius:12px; box-shadow:0 10px 25px rgba(0,0,0,.2);" +
      "font-size:13px; cursor:pointer; opacity:0; transform:translateY(10px);" +
      "transition:opacity .15s ease, transform .15s ease;";
    el.innerHTML = `<div style="font-weight:600; margin-bottom:4px;">Notification</div>
                    <div style="opacity:.9">${escapeHtml(message)}</div>
                    <div style="margin-top:8px; font-size:12px; opacity:.7">Clique pour ouvrir</div>`;

    el.addEventListener("click", () => {
      try { onClick?.(); } catch (_) {}
      el.remove();
    });

    toastContainer.appendChild(el);

    // animate in
    requestAnimationFrame(() => {
      el.style.opacity = "1";
      el.style.transform = "translateY(0)";
    });

    // auto remove
    setTimeout(() => {
      el.style.opacity = "0";
      el.style.transform = "translateY(10px)";
      setTimeout(() => el.remove(), 180);
    }, 4500);
  }

  // init badges (val serveur)
  if (notifBadge) setBadge(notifBadge.textContent);
  if (messagesBadge) setMessagesBadge(messagesBadge.textContent);

  const es = new EventSource("/events");

  es.addEventListener("ping", () => {});

  es.onmessage = (e) => {
    let data;
    try { data = JSON.parse(e.data); } catch (_) { return; }
    if (!data) return;

    // Messages
    if (data.type === "new_message") {
      const current = Number(messagesBadge?.textContent) || 0;
      setMessagesBadge(current + 1);

      const sender = data.message?.sender?.displayName || "Quelqu'un";
      const preview = data.message?.content?.substring(0, 50) || "";
      const msg = `üí¨ ${sender}: ${preview}${preview.length >= 50 ? "..." : ""}`;

      toast(msg, () => {
        window.location.href = `/messages/${data.conversationId}`;
      });
      return;
    }

    // Notifications
    if (typeof data.unreadCount === "number") {
      setBadge(data.unreadCount);
    } else {
      const current = Number(notifBadge?.textContent) || 0;
      setBadge(current + 1);
    }

    const msg = notifLabel(data);
    const goTo = () => {
      if (data.event?.groupId) window.location.href = `/groups/${data.event.groupId}`;
      else window.location.href = "/notifications";
    };

    toast(msg, goTo);
  };

})();
</script>


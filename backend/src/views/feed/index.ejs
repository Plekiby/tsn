<!doctype html>
<html>
  <body>
    <%- include("../partials/topnav", { unreadCount }) %>
    <h2>Feed</h2>
    <div style="margin-bottom:5px;">
      <a href="/posts/feed">↻ Reload</a>
      <% if (debug) { %>
        <a href="/posts/feed">Debug: OFF</a>
      <% } else { %>
        <a href="/posts/feed?debug=1">Debug: ON</a>
      <% } %>
    </div>

    <form method="POST" action="/auth/logout">
      <button type="submit">Logout</button>
    </form>

    <hr />

    <form method="POST" action="/posts">
      <textarea name="content" rows="3" placeholder="Quoi de neuf ?"></textarea>

      <div style="margin:8px 0;">
        <label>Visibilité :</label>
        <select name="visibility">
          <option value="PUBLIC">PUBLIC</option>
          <option value="FOLLOWERS">FOLLOWERS</option>
          <option value="FRIENDS">FRIENDS</option>
          <option value="PRIVATE">PRIVATE</option>
        </select>
      </div>
      <button type="submit">Publier</button>
    </form>

    <hr />

    <% if (!posts || posts.length === 0) { %>
      <p>Aucun post.</p>
    <% } %>

    <% (posts || []).forEach(p => { %>
      <div style="border:1px solid #ddd; padding:10px; margin:10px 0;">
        <strong><%= p.author.displayName %></strong>

        <div style="font-size:12px; opacity:0.7;">
          visibility: <%= p.visibility %>
        </div>
        <% if (p.group) { %>
          <div style="font-size:12px; opacity:0.7;">
            groupe: <a href="/groups/<%= p.group.id %>"><%= p.group.name %></a>
          </div>
        <% } %>

        <% if (debug && p.debugScore) { %>
          <div style="margin-top:6px; padding:6px; background:#f7f7f7; font-size:12px;">
            <div><strong>score:</strong> <%= p.debugScore.score.toFixed(2) %></div>
            <div>relation: <%= p.debugScore.relationScore %></div>
            <div>
              interests: <%= p.debugScore.interestScore %>
              (common: <%= p.debugScore.commonInterests %>)
            </div>
            <div>
              freshness: <%= p.debugScore.freshnessScore.toFixed(2) %>
              (ageHours: <%= p.debugScore.ageHours.toFixed(2) %>)
            </div>
            <div>
              engagement: <%= p.debugScore.engagementScore %>
              (likes: <%= p.debugScore.likesCount %>,
              comments: <%= p.debugScore.commentsCount %>)
            </div>
            <div>groupBonus: <%= p.debugScore.groupBonus %></div>
          </div>
        <% } %>

        <div style="margin-top:8px;"><%= p.content %></div>

        <div style="margin-top:8px;">likes: <%= p.likes.length %></div>

        <form method="POST" action="/posts/<%= p.id %>/like">
          <button type="submit">Like / Unlike</button>
        </form>

        <hr />

        <div style="margin-top:8px;">
          <div style="font-size:12px; opacity:0.7;">
            commentaires: <%= p._count?.comments ?? 0 %>
          </div>

          <form method="POST" action="/posts/<%= p.id %>/comments" style="margin-top:6px;">
            <input
              type="text"
              name="content"
              maxlength="1000"
              placeholder="Écrire un commentaire..."
              style="width:100%; padding:6px;"
              required
            />
            <button type="submit" style="margin-top:6px;">Commenter</button>
          </form>

          <% if (p.comments && p.comments.length > 0) { %>
            <div style="margin-top:10px;">
              <% p.comments.forEach(c => { %>
                <div style="border-top:1px solid #eee; padding:6px 0;">
                  <strong><%= c.user.displayName %></strong>
                  <span style="font-size:12px; opacity:0.6;">
                    • <%= new Date(c.createdAt).toLocaleString() %>
                  </span>
                  <div><%= c.content %></div>

                  <% if (user && (user.id === c.userId || user.id === p.authorId)) { %>
                    <form method="POST" action="/comments/<%= c.id %>/delete" style="display:inline;">
                      <button type="submit">Supprimer</button>
                    </form>
                  <% } %>
                </div>
              <% }) %>
            </div>

            <% if ((p._count?.comments ?? 0) > p.comments.length) { %>
              <div style="font-size:12px; opacity:0.6; margin-top:6px;">
                + <%= (p._count.comments - p.comments.length) %> autres commentaires
              </div>
            <% } %>
          <% } %>
        </div>
      </div>
    <% }) %>
  </body>
</html>

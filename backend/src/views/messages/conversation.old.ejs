<!doctype html>
<html>
  <head>
    <style>
      .chat-container {
        max-width: 800px;
        margin: 20px auto;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
      }
      .chat-header {
        background: #f5f5f5;
        padding: 15px;
        border-bottom: 1px solid #ddd;
      }
      .chat-messages {
        height: 500px;
        overflow-y: auto;
        padding: 15px;
        background: #fafafa;
      }
      .message {
        margin-bottom: 15px;
        display: flex;
        gap: 10px;
      }
      .message.own {
        flex-direction: row-reverse;
      }
      .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        background: #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
      }
      .message-content {
        max-width: 60%;
        padding: 10px 14px;
        border-radius: 12px;
        background: #fff;
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
      }
      .message.own .message-content {
        background: #667eea;
        color: #fff;
      }
      .message-sender {
        font-size: 12px;
        font-weight: bold;
        margin-bottom: 4px;
        opacity: 0.8;
      }
      .message.own .message-sender {
        text-align: right;
      }
      .message-time {
        font-size: 11px;
        opacity: 0.6;
        margin-top: 4px;
      }
      .chat-input {
        padding: 15px;
        border-top: 1px solid #ddd;
        background: #fff;
      }
      .chat-input form {
        display: flex;
        gap: 10px;
      }
      .chat-input input {
        flex: 1;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 20px;
        font-size: 14px;
      }
      .chat-input button {
        padding: 10px 20px;
        border-radius: 20px;
        background: #667eea;
        color: #fff;
        border: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <%- include("../partials/topnav", { unreadCount }) %>

    <div style="max-width:800px; margin:0 auto; padding:10px;">
      <a href="/messages">&larr; Retour aux conversations</a>
    </div>

    <div class="chat-container">
      <div class="chat-header">
        <% if (isGroup) { %>
          <strong><%= groupName %></strong>
          <div style="font-size:12px; opacity:0.7;"><%= conversation.members.length %> membres</div>
        <% } else { %>
          <% const other = otherMembers[0]; %>
          <strong><%= other?.displayName || 'Utilisateur' %></strong>
          <div style="font-size:12px; opacity:0.7;">
            <a href="/profiles/<%= other?.id %>">Voir le profil</a>
          </div>
        <% } %>
      </div>

      <div class="chat-messages" id="chatMessages">
        <% (conversation.messages || []).forEach(msg => { %>
          <div class="message <%= msg.senderId === user.id ? 'own' : '' %>">
            <% if (msg.sender.avatar) { %>
              <img src="<%= msg.sender.avatar %>" class="message-avatar" />
            <% } else { %>
              <div class="message-avatar">
                <%= msg.sender.displayName.charAt(0).toUpperCase() %>
              </div>
            <% } %>

            <div>
              <% if (msg.senderId !== user.id) { %>
                <div class="message-sender"><%= msg.sender.displayName %></div>
              <% } %>
              <div class="message-content">
                <%= msg.content %>
                <div class="message-time">
                  <%= new Date(msg.createdAt).toLocaleTimeString() %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="chat-input">
        <form method="POST" action="/messages/<%= conversation.id %>/send" id="chatForm">
          <input
            type="text"
            name="content"
            placeholder="Ã‰crivez votre message..."
            maxlength="5000"
            required
            autofocus
            id="messageInput"
          />
          <button type="submit">Envoyer</button>
        </form>
      </div>
    </div>

    <script>
    (function() {
      const chatMessages = document.getElementById("chatMessages");
      const chatForm = document.getElementById("chatForm");
      const messageInput = document.getElementById("messageInput");

      chatMessages.scrollTop = chatMessages.scrollHeight;

      const es = new EventSource("/events");

      es.onmessage = (e) => {
        let data;
        try { data = JSON.parse(e.data); } catch (_) { return; }

        if (data.type === "new_message" && data.conversationId === <%= conversation.id %>) {
          const msg = data.message;
          const isOwn = msg.senderId === <%= user.id %>;

          const msgDiv = document.createElement("div");
          msgDiv.className = "message" + (isOwn ? " own" : "");

          const avatarDiv = msg.sender.avatar
            ? `<img src="${msg.sender.avatar}" class="message-avatar" />`
            : `<div class="message-avatar">${msg.sender.displayName.charAt(0).toUpperCase()}</div>`;

          const senderDiv = !isOwn
            ? `<div class="message-sender">${msg.sender.displayName}</div>`
            : "";

          msgDiv.innerHTML = `
            ${avatarDiv}
            <div>
              ${senderDiv}
              <div class="message-content">
                ${escapeHtml(msg.content)}
                <div class="message-time">${new Date(msg.createdAt).toLocaleTimeString()}</div>
              </div>
            </div>
          `;

          chatMessages.appendChild(msgDiv);
          chatMessages.scrollTop = chatMessages.scrollHeight;
        }
      };

      function escapeHtml(str) {
        return String(str || "")
          .replaceAll("&", "&amp;")
          .replaceAll("<", "&lt;")
          .replaceAll(">", "&gt;")
          .replaceAll('"', "&quot;")
          .replaceAll("'", "&#039;");
      }

      chatForm.addEventListener("submit", (e) => {
        messageInput.value = messageInput.value.trim();
      });
    })();
    </script>
  </body>
</html>

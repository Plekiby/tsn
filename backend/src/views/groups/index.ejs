<%- include("../partials/header", { pageTitle: "Groupes", unreadCount, unreadMessages, user }) %>

<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">
        <i class="bi bi-people"></i> Groupes
      </h2>

      <hr class="mb-4">

      <!-- Créer un groupe -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Créer un groupe</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/groups">
            <div class="mb-3">
              <label for="name" class="form-label">Nom du groupe</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Nom du groupe"
                required
              />
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description (optionnel)</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="3"
                placeholder="Description du groupe..."
              ></textarea>
            </div>

            <div class="mb-3">
              <label for="privacy" class="form-label">Privacy</label>
              <select class="form-select" id="privacy" name="privacy">
                <option value="PUBLIC">PUBLIC</option>
                <option value="PRIVATE">PRIVATE</option>
                <option value="SECRET">SECRET</option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> Créer
            </button>
          </form>
        </div>
      </div>

      <hr class="mb-4">

      <!-- Mes groupes -->
      <div class="mb-5">
        <h3 class="h5 mb-3">
          <i class="bi bi-collection"></i> Mes groupes
        </h3>

        <% if (!myMemberships || myMemberships.length === 0) { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Tu n'es membre d'aucun groupe.
          </div>
        <% } else { %>
          <div class="list-group">
            <% myMemberships.forEach(m => { %>
              <a href="/groups/<%= m.group.id %>" class="list-group-item list-group-item-action">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="mb-1"><%= m.group.name %></h6>
                  </div>
                  <span class="badge bg-secondary"><%= m.role %></span>
                </div>
              </a>
            <% }) %>
          </div>
        <% } %>
      </div>

      <hr class="mb-4">

      <!-- Groupes visibles -->
      <div>
        <h3 class="h5 mb-3">
          <i class="bi bi-globe"></i> Groupes visibles
        </h3>

        <% if (!groups || groups.length === 0) { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun groupe visible.
          </div>
        <% } else { %>
          <div class="row g-3">
            <% groups.forEach(g => { %>
              <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body">
                    <h5 class="card-title">
                      <a href="/groups/<%= g.id %>" class="link-primary text-decoration-none">
                        <%= g.name %>
                      </a>
                    </h5>

                    <% if (g.description) { %>
                      <p class="card-text text-muted small"><%= g.description %></p>
                    <% } %>

                    <div class="small text-muted mt-2">
                      <div>
                        <i class="bi bi-shield"></i> <%= g.privacy %>
                      </div>
                      <div>
                        <i class="bi bi-person"></i> <%= g.owner.displayName %>
                      </div>
                      <div>
                        <i class="bi bi-people"></i> <%= g._count.members %> membres
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
